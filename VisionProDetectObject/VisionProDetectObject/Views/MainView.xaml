<Window x:Class="VisionProDetectObject.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:VisionProDetectObject.Views"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="MainView" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <materialDesign:Card>
            <TabControl
            materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
            SnapsToDevicePixels="True"
            
            Style="{StaticResource MaterialDesignNavigationRailTabControl}"
            TabStripPlacement="Left">
                <materialDesign:NavigationRailAssist.FloatingContent>
                    <Image Source="/Views/LOGO_IDEA_full_L.png" Width="50"></Image>
                </materialDesign:NavigationRailAssist.FloatingContent>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel
                                  Width="auto"
                                  Height="auto">        
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="Camera" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Camera" />
                        </StackPanel>
                    </TabItem.Header>

                    <local:ViewImageView Margin="30 16 16 16"/>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="Ethernet" />
                            <TextBlock
                            HorizontalAlignment="Center"
                            Text="Enthernet" />        
                        </StackPanel>
                    </TabItem.Header>
                    <local:ModbusView Margin="30 16 16 16"/>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="ApplicationEdit" />
                            <TextBlock
                            HorizontalAlignment="Center"
                            Text="Edit Program" />
                        </StackPanel>
                    </TabItem.Header>
                    <local:EditProgramView Margin="30 16 16 16"/>
                </TabItem>

            </TabControl>
        </materialDesign:Card>

    </Grid>
</Window>
